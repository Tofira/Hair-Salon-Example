<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <servlet>
        <servlet-name>ServicesServlet</servlet-name>
        <servlet-class>booking.server.ServicesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServicesServlet</servlet-name>
        <url-pattern>/services</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetDatesServlet</servlet-name>
        <servlet-class>booking.server.GetDatesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetDatesServlet</servlet-name>
        <url-pattern>/get_dates</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SetAppointmentServlet</servlet-name>
        <servlet-class>booking.server.SetAppointmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>booking.server.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SetAppointmentServlet</servlet-name>
        <url-pattern>/set_app</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
